<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".login"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/accent_material_light">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView2"
            android:src="@drawable/ttt"
            android:scaleType="centerCrop" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etusername"
            android:layout_marginTop="5dp"
            android:hint="Username"
            android:drawableLeft="@drawable/n"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:typeface="serif"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:shadowColor="#ffffff"
            android:onClick="login"
            android:layout_below="@+id/imageView3"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="05dp"
            android:textColor="#ffffff"
            android:layout_alignParentEnd="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etpassword"
            android:layout_marginTop="15dp"
            android:typeface="serif"
            android:hint="Password"
            android:drawableLeft="@drawable/m"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/etusername"
            android:layout_marginBottom="05dp"
            android:password="true"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/etusername" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            android:id="@+id/imageView3"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login1"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="LOG IN"
            android:id="@+id/btlogin"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#e49d3f"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/etpassword"
            android:layout_alignEnd="@+id/etpassword"
            android:layout_alignStart="@+id/etpassword"
            android:onClick="ownerr" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Don&apos;t have an account yet?"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:layout_marginLeft="15dp"
            android:layout_above="@+id/btsignin"
            android:layout_alignEnd="@+id/btlogin"
            android:layout_marginBottom="20dp"
            android:layout_alignStart="@+id/btlogin" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="SIGN IN"
            android:id="@+id/btsignin"
            android:textColor="#ffffff"
            android:background="@android:color/holo_purple"
            android:textSize="30dp"
            android:onClick="register1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/btlogin"
            android:layout_marginBottom="45dp"
            android:layout_alignEnd="@+id/textView" />

    </RelativeLayout>

</LinearLayout>
