<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".register"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView5"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ttt"
            android:scaleType="centerCrop" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tfname"
            android:drawableLeft="@drawable/avatar"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:hint="Name"
            android:textColorHint="#ffffff"
            android:textSize="25dp"
            android:textAlignment="center"
            android:typeface="normal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etusername"
            android:layout_below="@+id/tfname"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/namee"
            android:hint="Username"
            android:textAlignment="center"
            android:textColorHint="#ffffff"
            android:textSize="25dp"
            android:typeface="normal"
            android:layout_alignEnd="@+id/tfname"
            android:layout_alignStart="@+id/tfname"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/tpassword"
            android:layout_below="@+id/etusername"
            android:layout_alignEnd="@+id/etusername"
            android:layout_alignStart="@+id/etusername"
            android:layout_marginTop="15dp"
            android:hint="Password"
            android:drawableLeft="@drawable/key"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:typeface="sans"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/tpassword1"
            android:layout_below="@+id/tpassword"
            android:layout_alignEnd="@+id/tpassword"
            android:layout_alignStart="@+id/tpassword"
            android:textColorHint="#ffffff"
            android:textSize="25dp"
            android:drawableLeft="@drawable/key"
            android:typeface="serif"
            android:hint="Confirm Password"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/temail"
            android:drawableLeft="@drawable/mail"
            android:layout_below="@+id/tpassword1"
            android:layout_alignEnd="@+id/tpassword1"
            android:hint="E-mail"
            android:textSize="25dp"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            android:layout_alignStart="@+id/tpassword1"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text="REGISTER"
            android:id="@+id/btregister"
            android:layout_marginTop="150dp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:onClick="loginn"
            android:layout_below="@+id/tpassword1"
            android:layout_alignStart="@+id/tpassword1"
            android:layout_alignEnd="@+id/temail" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tphone"
            android:layout_marginTop="70dp"
            android:hint="Phone Number"
            android:drawableLeft="@drawable/smartphone"
            android:textColorHint="#ffffff"
            android:textSize="25dp"
            android:textAlignment="center"
            android:phoneNumber="true"
            android:layout_below="@+id/tpassword1"
            android:layout_alignStart="@+id/tpassword1"
            android:layout_alignEnd="@+id/temail"
            android:textColor="#ffffff" />

    </RelativeLayout>
</LinearLayout>
