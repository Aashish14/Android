<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.acap.tenant"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView10"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ttt"
            android:scaleType="centerCrop" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etlocation"
            android:drawableLeft="@drawable/placeholder"
            android:layout_alignParentTop="true"
            android:layout_marginTop="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Location of needed room"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textSize="25dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/etroom"
            android:drawableLeft="@drawable/room"
            android:hint="Required no. of rooms"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:textAlignment="center"
            android:textSize="25dp"
            android:layout_below="@+id/etlocation"
            android:layout_alignStart="@+id/etlocation"
            android:layout_alignEnd="@+id/etlocation"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="REQUIREMENT"
            android:id="@+id/textView4"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:textSize="25dp"
            android:textColor="@android:color/holo_orange_dark"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIND MATCH"
            android:id="@+id/btmatch"
            android:layout_below="@+id/etroom"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/etroom"
            android:layout_alignStart="@+id/etroom"
            android:background="@android:color/holo_orange_dark"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:onClick="matchh" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView14"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/req"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/etusername"
            android:layout_below="@+id/textView4"
            android:layout_marginTop="20dp"
            android:layout_alignEnd="@+id/etlocation"
            android:layout_alignStart="@+id/etlocation"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:textColor="@android:color/holo_orange_dark"
            android:visibility="invisible" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/btmatch"
            android:layout_marginTop="90dp"

            android:layout_alignEnd="@+id/btmatch"
            android:layout_alignStart="@+id/btmatch"
            android:spinnerMode="dropdown"
            android:contextClickable="false"
            android:clickable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:id="@+id/txt"
            android:layout_below="@+id/btmatch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="25dp" />

    </RelativeLayout>
</LinearLayout>
